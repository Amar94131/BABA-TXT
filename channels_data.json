import json

def add_channel_to_json():
    # चैनल डेटा जिसे हम जोड़ना चाहते हैं
    new_channel = {
        "id": 1,
        "name": "Channel One",
        "description": "This is the first channel."
    }

    # पहले से मौजूद JSON फाइल को पढ़ें, अगर फाइल नहीं है तो नया बनाएँ
    try:
        with open("channels.json", "r") as f:
            data = json.load(f)
    except FileNotFoundError:
        data = {"channels": []}  # अगर फाइल नहीं मिली तो डिफॉल्ट डेटा

    # नया चैनल जोड़ें
    data["channels"].append(new_channel)

    # JSON फाइल को अपडेट करें
    with open("channels.json", "w") as f:
        json.dump(data, f, indent=4)  # फॉर्मेटेड JSON

    print("चैनल सफलतापूर्वक जोड़ा गया।")

# फंक्शन कॉल करें
add_channel_to_json()
